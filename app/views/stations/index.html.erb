<p id="notice"><%= notice %></p>

<div class="d-flex flex-column align-items-center mt-3">
  <div class="col-xl-7 col-lg-8 col-md-10 col-sm-11 post-card">
    <div class="card">
      <div class="card-header">
        buildings
      </div>
      <div class="card-body">


<table>
  <thead>
    <tr>
      <th>building</th>
      <th>Rent</th>
      <th>Address</th>
      <th>Building age</th>
      <th>Feedbacks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buildings.each do |building| %>
      <tr>
        <td><%= building.building %></td>
        <td><%= building.rent %></td>
        <td><%= building.address %></td>
        <td><%= building.building_age %></td>
        <td><%= building.feedbacks %></td>
        <td><%= link_to 'Show', building , class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_building_path(building) , class: "btn btn-primary"  %></td>
        <td><%= link_to 'Destroy', building, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn "%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="actions">
  <%= link_to 'New building', new_building_path , class: "btn btn-primary"  %>
</div>

  </div>
    </div>
      </div>
        </div>
